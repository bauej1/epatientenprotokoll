<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp">

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                mstb:tbgChildSpacingForLastRow="align"
                mstb:tbgFlow="true"
                mstb:tbgRowSpacing="8dp"
                mstb:tbgChildSpacing="8dp"
                mstb:tbgMaxSelect="1"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                mstb:tbgChildSpacingForLastRow="align"
                mstb:tbgFlow="true"
                mstb:tbgRowSpacing="8dp"
                mstb:tbgChildSpacing="8dp"
                mstb:tbgMaxSelect="1"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

            <com.mikhaellopez.lazydatepicker.LazyDatePicker
                android:id="@+id/lazyDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/tName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etLastname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|textPersonName"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tVorname"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/vorname"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/strasse"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etStreet"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/telefon"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingBottom="2dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/plz"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etPLZ"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number|phone"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/ort"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etPlace"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/einsatzort"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etEinsatzort"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/zielort"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etZielort"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/tvRechnung"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/rechnung"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etRechnung"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightGrey"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp">

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/group_dummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                mstb:tbgChildSpacing="8dp"
                mstb:tbgChildSpacingForLastRow="align"
                mstb:tbgFlow="true"
                mstb:tbgRowSpacing="8dp">


            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anamnese"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etAnamnese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>