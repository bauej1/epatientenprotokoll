<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="vertical">

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/tbgMaterial1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                mstb:tbgChildSpacingForLastRow="align"
                mstb:tbgFlow="true"
                mstb:tbgChildSpacing="5dp"
                mstb:tbgRowSpacing="5dp">

            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="@string/halskragen"
                    android:textColor="@color/black" />

                <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                    android:id="@+id/tbgHalskragen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    mstb:tbgChildSpacingForLastRow="align"
                    mstb:tbgFlow="true"
                    mstb:tbgChildSpacing="5dp"
                    mstb:tbgRowSpacing="5dp"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="@string/rettungsbrett"
                    android:textColor="@color/black" />

                <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                    android:id="@+id/tbgRettungsbrett"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    mstb:tbgChildSpacingForLastRow="align"
                    mstb:tbgFlow="true"
                    mstb:tbgChildSpacing="5dp"
                    mstb:tbgRowSpacing="5dp"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="@string/wundversorgung"
                    android:textColor="@color/black" />

                <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                    android:id="@+id/tbgWundversorgung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    mstb:tbgChildSpacingForLastRow="align"
                    mstb:tbgFlow="true"
                    mstb:tbgChildSpacing="5dp"
                    mstb:tbgRowSpacing="5dp"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="7dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="@string/weitereMat"
                    android:textColor="@color/black"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:textColorLink="?attr/actionModeSplitBackground"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zielortAbgegeben"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_abgegebenMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:visibility="gone"
                mstb:mstbColorNotPressedText="@color/grey"
                mstb:mstbColorPressedText="@color/grey"
                mstb:mstbPrimaryColor="@color/black"
                mstb:mstbSecondaryColor="@color/grey"
                mstb:values="@array/abgegebenMaterial_array">

            </org.honorato.multistatetogglebutton.MultiStateToggleButton>

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/tbgMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                mstb:tbgChildSpacingForLastRow="align"
                mstb:tbgFlow="true"
                mstb:tbgChildSpacing="5dp"
                mstb:tbgRowSpacing="5dp">


            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3.6">

                    <ToggleButton
                        android:id="@+id/tbLiegend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@color/lightGrey"
                        android:drawableStart="@drawable/lagerung_liegend"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tbObereExtr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@color/lightGrey"
                        android:drawableStart="@drawable/lagerung_obereextr"
                        android:paddingLeft="10dp"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tbUntereExtr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@color/lightGrey"
                        android:drawableStart="@drawable/lagerung_untereextr"
                        android:paddingLeft="10dp"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3.6">

                    <ToggleButton
                        android:id="@+id/tbBeideExtr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@color/lightGrey"
                        android:drawableStart="@drawable/lagerung_beideextr"
                        android:paddingLeft="10dp"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tbSeitenlage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@color/lightGrey"
                        android:drawableStart="@drawable/lagerung_seitenlage"
                        android:paddingLeft="10dp"
                        android:textOff=""
                        android:textOn="" />

                    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                        android:id="@+id/tbgSeitenlage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:visibility="gone"
                        mstb:tbgChildSpacing="5dp"
                        mstb:tbgChildSpacingForLastRow="align"
                        mstb:tbgFlow="true"
                        mstb:tbgRowSpacing="5dp"></com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/tbSitzend"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@color/lightGrey"
                    android:drawableStart="@drawable/lagerung_sitzend"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>