<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/grey"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/materialundlagerung"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="vertical">

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_material1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:visibility="visible"
                app:mstbColorNotPressedText="@color/grey"
                app:mstbColorPressedText="@color/grey"
                app:mstbPrimaryColor="@android:color/black"
                app:mstbSecondaryColor="@color/grey"
                app:values="@array/material_array1" />

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_material2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:visibility="visible"
                app:mstbColorNotPressedText="@color/grey"
                app:mstbColorPressedText="@color/grey"
                app:mstbPrimaryColor="@android:color/black"
                app:mstbSecondaryColor="@color/grey"
                app:values="@array/material_array2">

            </org.honorato.multistatetogglebutton.MultiStateToggleButton>

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_halskragen"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:visibility="gone"
                app:mstbColorNotPressedText="@color/grey"
                app:mstbColorPressedText="@color/grey"
                app:mstbPrimaryColor="@android:color/black"
                app:mstbSecondaryColor="@color/grey"
                app:values="@array/halskragen_array">

            </org.honorato.multistatetogglebutton.MultiStateToggleButton>

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_rettungsbrett"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="142dp"
                android:layout_marginRight="7dp"
                android:visibility="gone"
                app:mstbColorNotPressedText="@color/grey"
                app:mstbColorPressedText="@color/grey"
                app:mstbPrimaryColor="@android:color/black"
                app:mstbSecondaryColor="@color/grey"
                app:values="@array/rettungsbrett_array">

            </org.honorato.multistatetogglebutton.MultiStateToggleButton>

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_wundversorgung"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="278dp"
                android:layout_marginRight="7dp"
                android:visibility="gone"
                app:mstbColorNotPressedText="@color/grey"
                app:mstbColorPressedText="@color/grey"
                app:mstbPrimaryColor="@android:color/black"
                app:mstbSecondaryColor="@color/grey"
                app:values="@array/wundversorgung_array">

            </org.honorato.multistatetogglebutton.MultiStateToggleButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="7dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="@string/weitereMat"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zielortAbgegeben"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>